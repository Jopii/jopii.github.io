---
// Footer.astro - Pie de página con tema soft/cute y links sociales
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;

const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: "Instagram",
    href: "https://www.instagram.com/jesujopi",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
    </svg>`
  },
  {
    name: "GitHub",
    href: "https://github.com/jopii",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
    </svg>`
  },
  {
    name: "LinkedIn",
    href: "https://linkedin.com/in/jesus-jodar",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
      <rect x="2" y="9" width="4" height="12"></rect>
      <circle cx="4" cy="4" r="2"></circle>
    </svg>`
  },
  {
    name: "Email",
    href: "mailto:contact@jesusjodar.es",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
      <polyline points="22,6 12,13 2,6"></polyline>
    </svg>`
  }
];
---

<footer class={`py-16 bg-[#faf7f5] border-t border-[#2d2a26]/10 ${className}`}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center gap-8">
      <!-- Logo/Name -->
      <div class="text-center">
        <p class="text-2xl font-bold text-[#2d2a26]">Jesús Jódar</p>
        <p class="text-[#f472b6] font-medium">Visual Artist | AI Enthusiast</p>
      </div>
      
      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target={link.name !== "Email" ? "_blank" : undefined}
            rel={link.name !== "Email" ? "noopener noreferrer" : undefined}
            class="w-12 h-12 flex items-center justify-center rounded-full bg-white text-[#6b6560] hover:text-[#f472b6] hover:bg-[#f472b6]/10 transition-all duration-200 shadow-sm hover:shadow-md border border-[#2d2a26]/5"
            aria-label={link.name}
          >
            <Fragment set:html={link.icon} />
          </a>
        ))}
      </div>
      
      <!-- Divider -->
      <div class="w-24 h-px bg-gradient-to-r from-transparent via-[#f472b6]/30 to-transparent"></div>
      
      <!-- Copyright -->
      <p class="text-[#6b6560] text-sm text-center">
        © {currentYear} Jesús Jódar. Hecho con <span class="text-[#f472b6]">♥</span> y <span class="text-[#a78bfa]">Astro</span>
      </p>
    </div>
  </div>
</footer>
