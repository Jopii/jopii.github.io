---
// Footer.astro - Footer mejorado con sección de contacto integrada
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: "Instagram",
    href: "https://www.instagram.com/jesujopi",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
      <rect x="2" y="2" width="20" height="20" rx="6" ry="6"></rect>
      <circle cx="12" cy="12" r="4.5"></circle>
      <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"></circle>
    </svg>`
  },
  {
    name: "GitHub",
    href: "https://github.com/jopii",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
      <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
    </svg>`
  },
  {
    name: "LinkedIn",
    href: "https://linkedin.com/in/jesus-jodar",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
      <rect x="2" y="2" width="20" height="20" rx="3"></rect>
      <line x1="8" y1="11" x2="8" y2="16"></line>
      <line x1="8" y1="8" x2="8" y2="8.01"></line>
      <line x1="12" y1="16" x2="12" y2="11"></line>
      <path d="M16 16v-3a2 2 0 0 0-4 0"></path>
    </svg>`
  },
  {
    name: "Email",
    href: "mailto:contact@jesusjodar.es",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
      <rect x="2" y="4" width="20" height="16" rx="4"></rect>
      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
    </svg>`
  }
];

const quickLinks = [
  { href: "#about", label: "Sobre Mí" },
  { href: "#skills", label: "Skills" },
  { href: "#gallery", label: "Portfolio" },
];
---

<footer id="contact" class="bg-[#2d2a26] text-white relative overflow-hidden">
  <!-- Decorative top border -->
  <div class="h-1 bg-gradient-to-r from-[#f472b6] via-[#a78bfa] to-[#f472b6]"></div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Contact CTA Section -->
    <div class="py-16 text-center border-b border-white/10 reveal">
      <p class="text-[#f472b6] font-medium mb-3 tracking-wide uppercase text-sm">Contacto</p>
      <h2 class="text-3xl md:text-4xl font-bold mb-4">¿Hablamos?</h2>
      <p class="text-white/60 max-w-lg mx-auto mb-8 text-lg">
        Siempre abierto a nuevas oportunidades, colaboraciones creativas o simplemente una buena conversación sobre IA y arte.
      </p>
      <a 
        href="mailto:contact@jesusjodar.es"
        class="inline-flex items-center gap-2 px-8 py-3 bg-[#f472b6] text-white font-medium rounded-full hover:bg-[#f472b6]/90 transition-all duration-200 shadow-lg shadow-[#f472b6]/25 hover:shadow-xl hover:shadow-[#f472b6]/30 hover:-translate-y-0.5"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="4" width="20" height="16" rx="4"></rect>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
        </svg>
        Enviar Email
      </a>
    </div>

    <!-- Footer Grid -->
    <div class="py-12 grid grid-cols-1 md:grid-cols-3 gap-8 reveal">
      <!-- Brand -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <img src="/img/logosvg.svg" alt="" class="w-8 h-8 invert opacity-80" aria-hidden="true" />
          <span class="font-bold text-lg">Jesús Jódar</span>
        </div>
        <p class="text-white/50 text-sm leading-relaxed">
          Visual Artist & AI Enthusiast. Explorando la intersección entre arte visual e inteligencia artificial.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold mb-4 text-white/80">Navegación</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-white/50 hover:text-[#f472b6] transition-colors duration-200 text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h3 class="font-semibold mb-4 text-white/80">Redes Sociales</h3>
        <div class="flex items-center gap-3">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target={link.name !== "Email" ? "_blank" : undefined}
              rel={link.name !== "Email" ? "noopener noreferrer" : undefined}
              class="w-10 h-10 flex items-center justify-center rounded-full bg-white/5 text-white/60 hover:text-[#f472b6] hover:bg-[#f472b6]/10 transition-all duration-200 border border-white/10 hover:border-[#f472b6]/30"
              aria-label={link.name}
            >
              <Fragment set:html={link.icon} />
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="py-6 border-t border-white/10 text-center">
      <p class="text-white/40 text-sm">
        &copy; {currentYear} Jesús Jódar. Hecho con <span class="text-[#f472b6]">&hearts;</span> y <span class="text-[#a78bfa]">Astro</span>
      </p>
    </div>
  </div>

  <!-- Decorative background shapes -->
  <div class="absolute top-20 left-[5%] w-64 h-64 rounded-full bg-[#f472b6]/3 blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-10 right-[10%] w-48 h-48 rounded-full bg-[#a78bfa]/3 blur-3xl pointer-events-none"></div>
</footer>
