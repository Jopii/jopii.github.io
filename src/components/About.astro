---
// About.astro - Sección de perfil y biografía
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;

const skills = [
  "Blender",
  "3D Modeling",
  "Texturing",
  "Character Design",
  "Props",
  "Game Assets"
];
---

<section class={`py-16 md:py-24 bg-black ${className}`}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
      <!-- Foto de perfil -->
      <div class="flex-shrink-0">
        <img
          src="/img/pfp-1.webp"
          alt="Foto de perfil de Jesús Jódar, artista 3D"
          class="w-32 h-32 md:w-40 md:h-40 rounded-full object-cover border-2 border-white/20"
          width="160"
          height="160"
        />
      </div>
      
      <!-- Información -->
      <div class="text-center md:text-left flex-1">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-1">
          Jesús Jódar
        </h2>
        <p class="text-lg text-white/70 mb-6">3D Artist</p>
        
        <p class="text-white/90 text-base md:text-lg leading-relaxed mb-6">
          I'm a 24 years old student currently studying videogame design and development. 
          I come with a solid four-year background as a junior 3D artist. My portfolio 
          showcases commissioned projects for music artists, where I've taken great care 
          to create visual experiences that harmonize seamlessly with their music. My love 
          for 3D art extends to a wide array of creative ventures, enhancing them with 
          depth and captivating visual appeal.
        </p>
        
        <!-- Skills/Tags -->
        <div class="flex flex-wrap justify-center md:justify-start gap-2">
          {skills.map((skill) => (
            <span class="px-3 py-1 text-sm text-white/80 bg-white/10 rounded-full">
              {skill}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
