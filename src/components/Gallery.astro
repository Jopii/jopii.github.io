---
// Gallery.astro - Grid de trabajos 3D con tema soft/cute
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;

// Portfolio items - imágenes reales
const portfolioItems = [
  {
    id: 1,
    title: "Kimoyo Beads",
    category: "Props",
    image: "/img/kimoyo.webp",
    alt: "Render 3D del Kimoyo Beads, collar tecnológico de Shuri de Black Panther"
  },
  {
    id: 2,
    title: "Evolución",
    category: "Concept Art",
    image: "/img/evolucion.webp",
    alt: "Render 3D conceptual sobre evolución y transformación"
  },
  {
    id: 3,
    title: "Omnitrix",
    category: "Props",
    image: "/img/omnitrix.webp",
    alt: "Render 3D del Omnitrix, dispositivo alienígena de Ben 10"
  },
  {
    id: 4,
    title: "Med-Mist",
    category: "Game Asset",
    image: "/img/medmist.webp",
    alt: "Render 3D de Med-Mist, ítem de curación de Fortnite"
  },
  {
    id: 5,
    title: "Kirby Azul",
    category: "Character",
    image: "/img/bluekirby.webp",
    alt: "Render 3D de Kirby azul, personaje de videojuego en estilo cartoon"
  },
  {
    id: 6,
    title: "Prism Sword",
    category: "Props",
    image: "/img/prismsword.webp",
    alt: "Render 3D de una espada prisma con efectos de luz"
  },
  {
    id: 7,
    title: "Revólver",
    category: "Props",
    image: "/img/revolver.webp",
    alt: "Render 3D de un revólver con detalles realistas"
  },
  {
    id: 8,
    title: "Jake",
    category: "Character",
    image: "/img/jake.webp",
    alt: "Render 3D de Jake el Perro de Hora de Aventura"
  },
  {
    id: 9,
    title: "Darkhold",
    category: "Props",
    image: "/img/darkhold.webp",
    alt: "Render 3D del Darkhold, libro mágico del universo Marvel"
  }
];
---

<section id="gallery" class={`py-20 md:py-28 bg-white ${className}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <p class="text-[#a78bfa] font-medium mb-3 tracking-wide uppercase text-sm">Portfolio</p>
      <h2 class="text-3xl md:text-4xl font-bold text-[#2d2a26] mb-4">Trabajos Recientes</h2>
      <p class="text-[#6b6560] max-w-2xl mx-auto text-lg">
        Una colección de proyectos personales y encargos que incluyen diseño de personajes, 
        assets para videojuegos y props de cultura pop.
      </p>
    </div>
    
    <!-- Gallery Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {portfolioItems.map((item, index) => (
        <div 
          class="group relative aspect-square overflow-hidden rounded-2xl bg-[#faf7f5] shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Image -->
          <img 
            src={item.image}
            alt={item.alt}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            loading="lazy"
          />
          
          <!-- Category Badge -->
          <div class="absolute top-4 left-4 z-10">
            <span class="px-3 py-1 text-xs font-medium text-[#2d2a26] bg-white/90 backdrop-blur-sm rounded-full">
              {item.category}
            </span>
          </div>
          
          <!-- Hover overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-[#2d2a26]/90 via-[#2d2a26]/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
            <div class="p-6 w-full">
              <h3 class="text-white font-bold text-xl mb-1">{item.title}</h3>
              <p class="text-white/80 text-sm">{item.category}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="text-center mt-16">
      <a 
        href="https://www.instagram.com/jesujopi" 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-[#f472b6] text-white font-medium rounded-full hover:bg-[#f472b6]/90 transition-all duration-200 shadow-lg shadow-[#f472b6]/25 hover:shadow-xl hover:shadow-[#f472b6]/30"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
          <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
        </svg>
        <span>Ver más en Instagram</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M7 17L17 7M17 7H7M17 7V17"/>
        </svg>
      </a>
    </div>
  </div>
</section>
