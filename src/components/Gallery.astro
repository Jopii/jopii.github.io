---
// Gallery.astro - Grid de trabajos 3D
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;

// Portfolio items - usando placeholders de imagen
const portfolioItems = [
  {
    id: 1,
    title: "Character Design",
    category: "3D Modeling",
    image: "/img/project-1.svg"
  },
  {
    id: 2,
    title: "Game Asset",
    category: "Props",
    image: "/img/project-2.svg"
  },
  {
    id: 3,
    title: "Visual Experience",
    category: "Music Art",
    image: "/img/project-3.svg"
  },
  {
    id: 4,
    title: "Character Study",
    category: "3D Modeling",
    image: "/img/project-4.svg"
  },
  {
    id: 5,
    title: "Environment",
    category: "Scene Design",
    image: "/img/project-5.svg"
  },
  {
    id: 6,
    title: "Album Cover",
    category: "Music Art",
    image: "/img/project-6.svg"
  }
];
---

<section id="gallery" class={`py-20 md:py-32 bg-black ${className}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Selected Work</h2>
      <p class="text-white/60 max-w-2xl mx-auto">
        A collection of commissioned projects and personal work spanning character design, 
        game assets, and visual experiences for music artists.
      </p>
    </div>
    
    <!-- Gallery Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {portfolioItems.map((item) => (
        <div class="group relative aspect-[4/5] overflow-hidden rounded-lg bg-zinc-900">
          <!-- Image -->
          <img 
            src={item.image}
            alt={item.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            loading="lazy"
          />
          
          <!-- Hover overlay -->
          <div class="absolute inset-0 bg-black/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
            <div class="text-center p-4">
              <h3 class="text-white font-semibold text-lg mb-1">{item.title}</h3>
              <p class="text-white/60 text-sm">{item.category}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="text-center mt-16">
      <a 
        href="https://www.instagram.com/jesujopi" 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors duration-200"
      >
        <span>View more on Instagram</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M7 17L17 7M17 7H7M17 7V17"/>
        </svg>
      </a>
    </div>
  </div>
</section>
