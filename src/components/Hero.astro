---
// Hero.astro - Sección hero principal con logo
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<section class={`relative min-h-screen flex items-center justify-center overflow-hidden ${className}`}>
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-black via-black to-zinc-900"></div>
  
  <!-- Content -->
  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8">
    <!-- Logo -->
    <div class="mb-8">
      <img 
        src="/img/logosvg.svg" 
        alt="Logo de Jesús Jódar"
        class="w-32 h-32 md:w-40 md:h-40 mx-auto"
        style="filter: invert(1);"
      />
    </div>
    
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-6 tracking-tight">
      Jesús Jódar
    </h1>
    <p class="text-xl md:text-2xl text-white/70 mb-8 font-light tracking-wide">
      3D Artist
    </p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a 
        href="#gallery" 
        class="px-8 py-3 bg-white text-black font-medium rounded-full hover:bg-white/90 transition-colors duration-200"
      >
        Ver Portfolio
      </a>
      <a 
        href="#about" 
        class="px-8 py-3 border border-white/30 text-white font-medium rounded-full hover:bg-white/10 transition-colors duration-200"
      >
        Sobre Mí
      </a>
    </div>
  </div>
  
  <!-- Scroll indicator - centrado -->
  <div class="absolute bottom-8 left-0 right-0 flex justify-center">
    <a href="#gallery" class="text-white/50 hover:text-white/80 transition-colors duration-300">
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        width="32" 
        height="32" 
        viewBox="0 0 24 24" 
        fill="none" 
        stroke="currentColor" 
        stroke-width="1.5" 
        stroke-linecap="round" 
        stroke-linejoin="round"
        class="animate-pulse"
      >
        <path d="M12 5v14M19 12l-7 7-7-7"/>
      </svg>
    </a>
  </div>
</section>
