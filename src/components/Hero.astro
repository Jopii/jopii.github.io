---
// Hero.astro - Sección hero con patrón geométrico y elemento 3D flotante
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<section class={`relative min-h-screen flex items-center justify-center overflow-hidden ${className}`}>
  <!-- Background gradient suave -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#faf7f5] via-[#fff5f8] to-[#f5f0ff]"></div>
  
  <!-- Patrón geométrico de fondo -->
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <!-- Círculos grandes difuminados -->
    <div class="absolute top-10 left-[10%] w-64 h-64 rounded-full bg-gradient-to-br from-[#f472b6]/20 to-transparent blur-2xl animate-pulse-slow"></div>
    <div class="absolute bottom-20 right-[5%] w-96 h-96 rounded-full bg-gradient-to-br from-[#a78bfa]/20 to-transparent blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/3 right-[20%] w-48 h-48 rounded-full bg-gradient-to-br from-[#f472b6]/15 to-transparent blur-2xl animate-pulse-slow" style="animation-delay: 1s;"></div>
    
    <!-- Formas geométricas redondeadas -->
    <div class="absolute top-[15%] left-[5%] w-16 h-16 rounded-2xl bg-[#f472b6]/10 rotate-12 animate-float"></div>
    
    <div class="absolute top-[25%] right-[15%] w-12 h-12 rounded-full bg-[#a78bfa]/15 animate-float" style="animation-delay: 0.5s;"></div>
    
    <div class="absolute bottom-[30%] left-[8%] w-20 h-20 rounded-3xl bg-[#f472b6]/8 -rotate-6 animate-float" style="animation-delay: 1s;"></div>
    
    <div class="absolute top-[60%] right-[8%] w-14 h-14 rounded-xl bg-[#a78bfa]/10 rotate-45 animate-float" style="animation-delay: 1.5s;"></div>
    
    <div class="absolute bottom-[15%] left-[25%] w-10 h-10 rounded-full bg-[#f472b6]/12 animate-float" style="animation-delay: 0.8s;"></div>
    
    <div class="absolute top-[40%] left-[15%] w-8 h-8 rounded-lg bg-[#a78bfa]/8 rotate-12 animate-float" style="animation-delay: 1.2s;"></div>
    
    <!-- Puntos decorativos -->
    <div class="absolute top-[20%] left-[30%] w-3 h-3 rounded-full bg-[#f472b6]/30"></div>
    <div class="absolute top-[70%] right-[25%] w-2 h-2 rounded-full bg-[#a78bfa]/40"></div>
    <div class="absolute bottom-[40%] left-[20%] w-4 h-4 rounded-full bg-[#f472b6]/20"></div>
    <div class="absolute top-[45%] right-[30%] w-3 h-3 rounded-full bg-[#a78bfa]/25"></div>
  </div>
  
  <!-- Elemento 3D decorativo flotante -->
  <div class="absolute top-[15%] right-[10%] md:right-[15%] z-20 hidden md:block">
    <div class="relative w-28 h-28 animate-float-3d">
      <!-- Forma 3D estilizada - Toroide/flor -->
      <svg viewBox="0 0 100 100" class="w-full h-full drop-shadow-2xl">
        <defs>
          <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#f472b6;stop-opacity:0.9" />
            <stop offset="100%" style="stop-color:#a78bfa;stop-opacity:0.9" />
          </linearGradient>
          <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#f9a8d4;stop-opacity:0.7" />
            <stop offset="100%" style="stop-color:#c4b5fd;stop-opacity:0.7" />
          </linearGradient>
        </defs>
        <!-- Círculos concéntricos estilo flor 3D -->
        <circle cx="50" cy="50" r="45" fill="none" stroke="url(#grad1)" stroke-width="3" opacity="0.6" />
        <circle cx="50" cy="50" r="35" fill="none" stroke="url(#grad2)" stroke-width="4" opacity="0.5" />
        <circle cx="50" cy="50" r="25" fill="none" stroke="url(#grad1)" stroke-width="3" opacity="0.7" />
        <circle cx="50" cy="50" r="15" fill="url(#grad1)" opacity="0.3" />
        <circle cx="50" cy="50" r="8" fill="url(#grad2)" opacity="0.6" />
        
        <!-- Líneas decorativas -->
        <line x1="50" y1="5" x2="50" y2="20" stroke="url(#grad1)" stroke-width="2" opacity="0.4" stroke-linecap="round" />
        <line x1="50" y1="80" x2="50" y2="95" stroke="url(#grad1)" stroke-width="2" opacity="0.4" stroke-linecap="round" />
        <line x1="5" y1="50" x2="20" y2="50" stroke="url(#grad2)" stroke-width="2" opacity="0.4" stroke-linecap="round" />
        <line x1="80" y1="50" x2="95" y2="50" stroke="url(#grad2)" stroke-width="2" opacity="0.4" stroke-linecap="round" />
      </svg>
    </div>
  </div>
  
  <!-- Segundo elemento 3D decorativo - lado izquierdo inferior -->
  <div class="absolute bottom-[25%] left-[5%] md:left-[10%] z-20 hidden lg:block">
    <div class="relative w-20 h-20 animate-float-3d-reverse">
      <svg viewBox="0 0 100 100" class="w-full h-full drop-shadow-xl">
        <defs>
          <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#a78bfa;stop-opacity:0.8" />
            <stop offset="100%" style="stop-color:#f472b6;stop-opacity:0.8" />
          </linearGradient>
        </defs>
        <!-- Forma de cubo/hexágono estilizado -->
        <polygon points="50,5 90,25 90,70 50,90 10,70 10,25" fill="none" stroke="url(#grad3)" stroke-width="2.5" opacity="0.5" />
        <polygon points="50,20 75,32 75,62 50,75 25,62 25,32" fill="url(#grad3)" opacity="0.2" />
        <circle cx="50" cy="48" r="8" fill="url(#grad3)" opacity="0.4" />
      </svg>
    </div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
    <!-- Logo -->
    <div class="mb-8">
      <img 
        src="/img/logosvg.svg" 
        alt="Logo de Jesús Jódar"
        class="w-32 h-32 md:w-40 md:h-40 mx-auto drop-shadow-lg"
        style="filter: invert(0.2) sepia(0.1) hue-rotate(300deg);"
      />
    </div>
    
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-[#2d2a26] mb-6 tracking-tight">
      Jesús Jódar
    </h1>
    <p class="text-xl md:text-2xl text-[#6b6560] mb-4 font-light">
      Visual Artist <span class="text-[#f472b6]">|</span> AI Enthusiast
    </p>
    <p class="text-base md:text-lg text-[#6b6560]/80 mb-8 max-w-2xl mx-auto">
      Explorando la intersección entre arte visual, inteligencia artificial y comunicación humano-máquina. 
      Desarrollando interfaces de nueva generación para agentes de IA omnimodales de baja latencia.
    </p>
    
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a 
        href="#gallery" 
        class="px-8 py-3 bg-[#f472b6] text-white font-medium rounded-full hover:bg-[#f472b6]/90 transition-all duration-200 shadow-lg shadow-[#f472b6]/25 hover:shadow-xl hover:shadow-[#f472b6]/30 hover:-translate-y-0.5"
      >
        Ver Portfolio
      </a>
      <a 
        href="#about" 
        class="px-8 py-3 border-2 border-[#2d2a26]/20 text-[#2d2a26] font-medium rounded-full hover:bg-[#2d2a26]/5 transition-all duration-200 hover:border-[#2d2a26]/30"
      >
        Sobre Mí
      </a>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-0 right-0 flex justify-center">
    <a href="#about" class="text-[#f472b6] hover:text-[#a78bfa] transition-colors duration-300 animate-bounce">
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        width="32" 
        height="32" 
        viewBox="0 0 24 24" 
        fill="none" 
        stroke="currentColor" 
        stroke-width="2" 
        stroke-linecap="round" 
        stroke-linejoin="round"
      >
        <path d="M12 5v14M19 12l-7 7-7-7"/>
      </svg>
    </a>
  </div>
  
  <!-- Animaciones CSS inline -->
  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-20px) rotate(5deg); }
    }
    
    @keyframes float-3d {
      0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
      25% { transform: translateY(-10px) rotate(5deg) scale(1.02); }
      50% { transform: translateY(-5px) rotate(0deg) scale(1); }
      75% { transform: translateY(-15px) rotate(-5deg) scale(1.02); }
    }
    
    @keyframes float-3d-reverse {
      0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
      25% { transform: translateY(-15px) rotate(-3deg) scale(1.03); }
      50% { transform: translateY(-8px) rotate(0deg) scale(1); }
      75% { transform: translateY(-12px) rotate(3deg) scale(1.02); }
    }
    
    @keyframes pulse-slow {
      0%, 100% { opacity: 0.4; transform: scale(1); }
      50% { opacity: 0.6; transform: scale(1.05); }
    }
    
    .animate-float {
      animation: float 6s ease-in-out infinite;
    }
    
    .animate-float-3d {
      animation: float-3d 8s ease-in-out infinite;
    }
    
    .animate-float-3d-reverse {
      animation: float-3d-reverse 10s ease-in-out infinite;
    }
    
    .animate-pulse-slow {
      animation: pulse-slow 8s ease-in-out infinite;
    }
  </style>
</section>
